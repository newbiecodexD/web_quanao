@model web_quanao.Models.ManageAccountViewModel
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@section Styles{
<style>
.manage-wrapper{ min-height:60vh; }
.manage-card{ max-width:520px; margin:auto; background:#fff; padding:1.75rem 2rem; border-radius:12px; box-shadow:0 6px 20px -6px rgba(0,0,0,.08); }
.manage-card h2{ font-size:1.35rem; font-weight:600; margin-bottom:1rem; text-align:center; }
.readonly-field{ background:#f5f5f5; }
</style>
}

<div class="manage-wrapper py-4">
    <div class="manage-card">
        <h2>@ViewBag.Title</h2>
        @if(!string.IsNullOrEmpty(ViewBag.StatusMessage as string)){
            <div class="alert alert-success text-center">@ViewBag.StatusMessage</div>
        }
        @using (Html.BeginForm("Index","Manage",FormMethod.Post, new { @class="js-submit" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.Email, new { @class="form-control readonly-field", placeholder="Email", @readonly="readonly" })
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.ShippingAddress, new { @class="form-control", placeholder="Địa chỉ nhận hàng" })
                @Html.LabelFor(m => m.ShippingAddress)
                @Html.ValidationMessageFor(m => m.ShippingAddress, null, new { @class="text-danger small" })
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary px-4" data-loading>Cập nhật</button>
            </div>
        }
        <div class="text-center mt-3 small text-muted">Email không thể thay đổi. Nếu cần hỗ trợ hãy liên hệ quản trị.</div>
    </div>
</div>

@section Scripts{ }