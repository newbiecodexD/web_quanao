@using web_quanao.Models
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    var accountVm = ViewBag.AccountVm as AccountInfoViewModel; // chỉ dùng AccountInfoViewModel
}

@section Styles{
<style>
.manage-wrapper{ max-width:620px; margin:auto; }
.section-card{ background:#fff; border:1px solid #e5e5e5; border-radius:12px; padding:1.25rem 1.5rem; box-shadow:0 4px 14px -4px rgba(0,0,0,.08); margin-bottom:1.3rem; }
.section-card h3{ font-size:1.05rem; font-weight:600; margin-bottom:.9rem; }
</style>
}

<div class="manage-wrapper py-4">
    <h2 class="mb-3">@ViewBag.Title</h2>
    @if(ViewBag.Msg!=null){ <div class="alert alert-success">@ViewBag.Msg</div> }
    @if(ViewBag.Err!=null){ <div class="alert alert-danger">@ViewBag.Err</div> }

    <div class="section-card">
        <h3>Thông tin tài khoản</h3>
        @using (Html.BeginForm("UpdateAccountInfo","Manage",FormMethod.Post)){
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" name="Email" value="@accountVm?.Email" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Địa chỉ nhận hàng</label>
                <input type="text" name="ShippingAddress" value="@accountVm?.ShippingAddress" class="form-control" placeholder="Địa chỉ nhận hàng" />
            </div>
            <button class="btn btn-primary">Cập nhật</button>
        }
    </div>

    <div class="section-card">
        <h3>Đổi mật khẩu</h3>
        @using (Html.BeginForm("ChangePassword","Manage",FormMethod.Post)){
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Mật khẩu hiện tại</label>
                <input type="password" name="CurrentPassword" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu mới</label>
                <input type="password" name="NewPassword" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Xác nhận mật khẩu mới</label>
                <input type="password" name="ConfirmNewPassword" class="form-control" />
            </div>
            <button class="btn btn-warning">Đổi mật khẩu</button>
        }
        <p class="text-muted small mt-2 mb-0">Mật khẩu tối thiểu 6 ký tự, nên chứa chữ hoa, chữ thường, số và ký tự đặc biệt.</p>
    </div>
</div>

@section Scripts{ }@section Scripts{ }