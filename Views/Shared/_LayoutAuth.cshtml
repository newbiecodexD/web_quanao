<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - UNIQLO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        body{background:#f7f7f7; font-family:Arial, sans-serif; min-height:100vh; display:flex; flex-direction:column; }
        .auth-header{padding:1.25rem 0 .5rem; text-align:center;}
        .auth-header .brand{display:inline-flex; align-items:center; gap:.6rem; font-weight:700; font-size:1.35rem; color:#da291c; text-decoration:none;}
        .auth-header img{height:42px;}
        .auth-footer{margin-top:auto; text-align:center; font-size:.8rem; color:#666; padding:1.25rem 0;}
    </style>
    @RenderSection("Styles", required:false)
</head>
<body>
    <header class="auth-header">
        <a href="@Url.Action("Index","Home")" class="brand">
            <img src="~/Content/Images/uniqlo-logo.png" alt="UNIQLO" />
            <span>UNIQLO</span>
        </a>
    </header>
    <main class="flex-grow-1 d-flex flex-column">
        @RenderBody()
    </main>
    <footer class="auth-footer">&copy; @DateTime.Now.Year UNIQLO</footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required:false)
</body>
</html>
