@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}
<section class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">@ViewBag.Title</h1>
        <a href="@Url.Action("Index","Cart")" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay về giỏ hàng</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Chưa có đơn hàng nào.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var o in Model)
            {
                var total = (decimal)(o.TotalAmount);
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold">Mã đơn: @o.OrderId</div>
                                    <div class="text-muted small">Ngày: @(((DateTime)o.OrderDate).ToString("dd/MM/yyyy HH:mm")) | Trạng thái: @o.Status</div>
                                </div>
                                <div class="text-end"><div class="fw-bold">Tổng: @total.ToString("N0") ₫</div></div>
                            </div>
                            @if (o.Items != null && o.Items.Count > 0)
                            {
                                <hr />
                                <ul class="list-group list-group-flush">
                                    @foreach (var it in o.Items)
                                    {
                                        var line = (decimal)it.LineTotal;
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span>@it.ProductName x @it.Quantity</span>
                                            <span>@line.ToString("N0") ₫</span>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
