@model web_quanao.ViewModels.CategoryFormViewModel
@{
    ViewBag.Title = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class="js-submit" })){
    @Html.AntiForgeryToken()
    <div class="mb-3">
        @Html.LabelFor(m => m.Name, "Tên danh mục")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder="Nhập tên" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Description, "Mô tả")
        @Html.TextAreaFor(m => m.Description, 4, 60, new { @class = "form-control", placeholder="Mô tả" })
    </div>
    <button class="btn btn-primary" data-loading>Lưu</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")" data-loading>Hủy</a>
}
@section Scripts{ @Scripts.Render("~/bundles/jqueryval") }
