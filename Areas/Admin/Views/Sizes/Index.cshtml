@model IEnumerable<web_quanao.Models.Size>
@{
    ViewBag.Title = "Sizes";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p><a class="btn btn-primary" href="@Url.Action("Create")">Thêm size</a></p>
<table class="table table-bordered table-striped">
    <thead><tr><th>ID</th><th>Size</th><th></th></tr></thead>
    <tbody>
    @foreach (var s in Model){
        <tr>
            <td>@s.SizeId</td>
            <td>@s.SizeName</td>
            <td>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = s.SizeId })">S?a</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = s.SizeId })">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
