@model web_quanao.Models.Product
@using web_quanao.Helpers
@{
    ViewBag.Title = "Chi ti?t s?n ph?m";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <h5>@Model.Name</h5>
        <div>Danh m?c: @Model.Category?.Name</div>
        <div>Giá: @Html.Price(Model.Price)</div>
        <div>Gi?i tính: @Model.Gender</div>
        <div>Mô t?:</div>
        <div class="border p-2">@Html.Raw(Model.Description)</div>
    </div>
    <div class="col-md-6">
        <h6>Hình ?nh</h6>
        <div class="d-flex flex-wrap gap-2">
            @foreach (var img in Model.ProductImages){
                <img src="@Url.Content(img.ImageUrl)" class="img-thumbnail" style="height:100px" />
            }
        </div>
        <h6 class="mt-3">T?n kho (theo size)</h6>
        <table class="table table-sm">
            <thead><tr><th>Size</th><th>Stock</th></tr></thead>
            <tbody>
            @foreach (var s in Model.ProductSizes.OrderBy(x=>x.Size.SizeName)){
                <tr><td>@s.Size.SizeName</td><td>@s.Stock</td></tr>
            }
            </tbody>
        </table>
    </div>
</div>
<p><a class="btn btn-secondary" href="@Url.Action("Index")">Quay l?i</a></p>
