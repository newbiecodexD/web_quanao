@model web_quanao.ViewModels.ProductFormViewModel
@{
    ViewBag.Title = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data", @class="js-submit" }))
{
    @Html.AntiForgeryToken()
    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.CategoryId, "Category")
                @Html.DropDownListFor(m => m.CategoryId, Model.Categories, "--Select--", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.CategoryId)
            </div>
            <div class="mb-3">
                <label>Gender</label>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.Gender, "Nam", new { @class = "form-check-input", id = "g1" })
                    <label class="form-check-label" for="g1">Nam</label>
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.Gender, "Nu", new { @class = "form-check-input", id = "g2" })
                    <label class="form-check-label" for="g2">N?</label>
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.Gender, "Unisex", new { @class = "form-check-input", id = "g3" })
                    <label class="form-check-label" for="g3">Unisex</label>
                </div>
                @Html.ValidationMessageFor(m => m.Gender)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01" })
                @Html.ValidationMessageFor(m => m.Price)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, 5, 60, new { @class = "form-control" })
            </div>
            <div class="mb-3">
                <label>Upload nhi?u hình</label>
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <label>Ch?n size & nh?p stock</label>
            <div class="list-group">
                @for (int i = 0; i < Model.Sizes.Count(); i++){
                    <div class="list-group-item d-flex align-items-center">
                        @Html.HiddenFor(m => m.Sizes.ElementAt(i).SizeId)
                        <div class="form-check me-3">
                            @Html.CheckBoxFor(m => m.Sizes.ElementAt(i).Selected, new {@class = "form-check-input"})
                        </div>
                        <div class="me-3" style="width:120px;">@Model.Sizes.ElementAt(i).SizeName</div>
                        <div class="flex-grow-1">
                            @Html.TextBoxFor(m => m.Sizes.ElementAt(i).Stock, new { @class = "form-control", type="number", min="0" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="mt-3"><button class="btn btn-primary" data-loading>L?u</button> <a class="btn btn-secondary" href="@Url.Action("Index")" data-loading>H?y</a></div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
