@model web_quanao.ViewModels.ProductFormViewModel
@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data", @class="js-submit" }))
{
    @Html.AntiForgeryToken()
    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                @Html.LabelFor(m => m.Name, "Tên sản phẩm")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên sản phẩm" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.CategoryId, "Danh mục")
                @Html.DropDownListFor(m => m.CategoryId, Model.Categories, "-- Chọn --", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.CategoryId)
            </div>
            <div class="mb-3">
                <label class="form-label">Giới tính</label>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.Gender, "Nam", new { @class = "form-check-input", id = "g1" })
                    <label class="form-check-label" for="g1">Nam</label>
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.Gender, "Nữ", new { @class = "form-check-input", id = "g2" })
                    <label class="form-check-label" for="g2">Nữ</label>
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.Gender, "Unisex", new { @class = "form-check-input", id = "g3" })
                    <label class="form-check-label" for="g3">Unisex</label>
                </div>
                @Html.ValidationMessageFor(m => m.Gender)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Price, "Giá")
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
                @Html.ValidationMessageFor(m => m.Price)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Description, "Mô tả")
                @Html.TextAreaFor(m => m.Description, 5, 60, new { @class = "form-control", placeholder = "Mô tả sản phẩm" })
            </div>
            <div class="mb-3">
                <label class="form-label">Tải nhiều hình (upload)</label>
                <input type="file" name="files" multiple class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Hoặc nhập link hình ảnh (mỗi dòng 1 link)</label>
                <textarea name="ImageUrls" class="form-control" rows="4" placeholder="https://.../a.jpg&#10;https://.../b.png"></textarea>
                <small class="text-muted">Ưu tiên file upload; nếu không có file thì link đầu tiên sẽ làm ảnh chính.</small>
            </div>
        </div>
        
    </div>
    <div class="mt-3"><button class="btn btn-primary" data-loading>Lưu</button> <a class="btn btn-secondary" href="@Url.Action("Index")" data-loading>Hủy</a></div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
