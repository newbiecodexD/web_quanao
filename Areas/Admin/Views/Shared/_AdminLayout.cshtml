<!DOCTYPE html>
<html lang="vi">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body{background:#fafafa;}
        .admin-sidebar{background:#ffffff; border-right:1px solid #e1e1e1;}
        .brand-bar{background:#da291c; color:#fff; padding:.85rem 1rem; display:flex; align-items:center; gap:.75rem; font-weight:600; letter-spacing:.5px;}
        .brand-bar img{height:36px;}
        .nav-link{color:#555; font-weight:500; padding:.55rem 1rem; border-left:4px solid transparent;}
        .nav-link:hover{background:#f5f5f5; color:#000;}
        .nav-link.active{background:#fce7e5; border-color:#da291c; color:#da291c;}
        .admin-header-actions{display:flex; align-items:center; gap:.75rem;}
    </style>
    @RenderSection("Styles", required:false)
</head>
<body>
    @Html.Partial("~/Views/Shared/_Loading.cshtml")
    <div class="container-fluid">
        <div class="row">
            <aside class="col-2 min-vh-100 admin-sidebar p-0">
                <div class="brand-bar">
                    <img src="~/Content/Images/uniqlo-logo.png" alt="UNIQLO" />
                    <span>UNIQLO Admin</span>
                </div>
                @Html.Partial("_AdminSidebar")
                <div class="p-3 border-top">
                    @using (Html.BeginForm("LogOff","Account",FormMethod.Post,new { id="adminLogoutForm" })){
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-light w-100 text-start d-flex align-items-center gap-2" style="background:#da291c;color:#fff;">
                            <i class="bi bi-box-arrow-right"></i><span>Đăng xuất</span>
                        </button>
                    }
                </div>
            </aside>
            <main class="col-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h5 m-0">@ViewBag.Title</h1>
                    <div class="admin-header-actions">
                        @RenderSection("Toolbar", required:false)
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required:false)
</body>
</html>
