@model web_quanao.ViewModels.UserFormViewModel
@{
    ViewBag.Title = "C?p nh?t vai trò";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if(TempData["Msg"]!=null){ <div class="alert alert-success">@TempData["Msg"]</div> }
@using (Html.BeginForm("Edit","Users",FormMethod.Post, new { @class="js-submit" })){
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    <div class="mb-3">
        @Html.LabelFor(m => m.Email, "Email")
        @Html.TextBoxFor(m => m.Email, new { @class="form-control", @readonly="readonly" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Role, "Vai trò")
        @Html.DropDownListFor(m => m.Role, new SelectList(new[]{"Admin","Customer"}), null, new { @class="form-select" })
    </div>
    <button class="btn btn-primary" data-loading>L?u</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")" data-loading>Quay l?i</a>
}
@section Scripts{ @Scripts.Render("~/bundles/jqueryval") }
