@model IEnumerable<web_quanao.Models.User>
@{
    ViewBag.Title = "Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h5 mb-3">Danh sách người dùng</h1>
@if (TempData["Msg"] != null){ <div class="alert alert-success">@TempData["Msg"]</div> }
<table class="table table-bordered table-striped align-middle">
    <thead class="table-danger">
        <tr>
            <th style="width:70px;">ID</th>
            <th>Email</th>
            <th style="width:140px;">Vai trò</th>
            <th style="width:120px;">Sửa</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model){
        <tr>
            <td>@u.UserId</td>
            <td>@u.Email</td>
            <td>@u.Role</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = u.UserId })" data-loading>Đổi vai trò</a>
            </td>
        </tr>
    }
    </tbody>
</table>
